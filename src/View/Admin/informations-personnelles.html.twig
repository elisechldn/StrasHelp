{% extends "layout.html.twig" %}

{% block content %}
<main class="uk-container uk-container-large">
<section class="uk-section uk-container-medium">
    <div>
	    <h3 class="h3_dashboard">Informations personnelles</h3>
        <p class="description_dashboard uk-align-center">Vous retrouvez ici toutes vos informations personnelles liées à votre compte utilisateur et apparaissant sur votre profil.</p>
    </div>
    <!-- Détails des informations -->
	<div class="container_informations-personnelles">
		<div class="uk-width-1-3 uk-align-center">
			<div class="card-user_informations-personnelles">
				<img src="https://source.unsplash.com/600x400/?car,automobile" alt="{{ annonce.title }}">
				<p class="user_informations-personnelles">{{ user.username }}</p>
			</div>
		</div>		
		<div class="uk-width-2-3 uk-align-center div-container_informations-personnelles">
            <h5 class="label_informations-personnelles">Prénom(s)</h5>
			<p class="values_informations-personnelles">{{ user.firstname }}</p>
			<h5 class="label_informations-personnelles">Nom(s)</h5>
			<p class="values_informations-personnelles">{{ user.lastname }}</p>
			<h5 class="label_informations-personnelles">Adresse mail</h5>
			<p class="values_informations-personnelles">{{ user.email }}</p>			
			<h5 class="label_informations-personnelles">Date de naissance</h5>
			<p class="values_informations-personnelles">{{ user.birthdate }}</p>
			<h5 class="label_informations-personnelles">Téléphone</h5>
			<p class="values_informations-personnelles">{{ user.phone_number }}</p>
		</div>
		
		</div>
	</div>
</section>
</main>
{% endblock %}